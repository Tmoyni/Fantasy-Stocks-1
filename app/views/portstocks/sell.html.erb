<h1>Let's Sell Some Stocks!</h1>
<p><%= link_to 'Back to Portfolio', portfolio_path(session[:port_id]) %><br>
</p>

<% if flash[:message] %>
    <h3> 🙅‍♂️<%= flash[:message] %>🙅‍♀️</h3>
<% end%>

<p>Portfolio: <%= Portfolio.find(session[:port_id]).name %></p>
<h2><%= Stock.find(session[:stock_id]).name %></h2>
<p>Symbol: <%= Stock.find(session[:stock_id]).symbol %></p>
<p>Current Stock Price: <%= number_to_currency(Stock.find(session[:stock_id]).price) %></p>
<p>Average Stock Price Paid: <%= number_to_currency(@total_amount_paid_for_stock / @shares_owned) %> </p>
<p>Total Stock Value: <%= number_to_currency(@shares_owned * Stock.find(session[:stock_id]).price) %></p>
<p>Total Stock Price Paid: <%= number_to_currency(@total_amount_paid_for_stock) %> </p>
<p>Shares Owned: <%= @shares_owned%></p>



<%= form_for @portstock, url: sell_create_path do |f| %>
    <%= f.label "How many shares would you like to sell?" %><br>
    <%= f.number_field :shares %>
    <%= f.submit "Sell"%>
<% end %>

<p><%= link_to 'Cancel', portfolio_path(session[:port_id]) %><br>
