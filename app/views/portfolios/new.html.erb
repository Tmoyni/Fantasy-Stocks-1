<body class="bg-gradient-primary">

  <div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-8 col-lg-8 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h2 text-gray-900 mb-2">Create A New Portfolio</h1>
                    <p class="mb-4">What would you like to call your portfolio?</p>
                    <%= form_for @portfolio do |f| %>
                        <% f.label :name %><br>
                        <%= f.text_field :name %>
                        <%= f.submit "Create Portfolio", class: "d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm" %>
                    <% end %>
                  </div>
                </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>
</body>