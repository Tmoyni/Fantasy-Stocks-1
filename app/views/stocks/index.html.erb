All Available Stocks

<p><%= link_to 'Back to Portfolio', portfolio_path(session[:port_id]) %><br>



<table style="width:50%">
    <thead>
        <tr>
            <th></th>
            <th>Stock Name</th>
            <th>Symbol</th>
            <th>Price</th>
        </tr>
    </thead>

    <tbody>
        <% @stocks.each do |stock|%>
            <tr>
                <td><%= link_to "Buy", {action: "buy", id: stock.id} %> </td>
                <td><%= stock.name %></td>
                <td><%= stock.symbol %></td>
                <td><%= number_to_currency(stock.price) %></td>
            </tr>
        <% end %>
    </tbody>
</table>